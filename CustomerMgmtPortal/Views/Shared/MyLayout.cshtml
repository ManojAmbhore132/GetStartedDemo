@using CustomerMgmtPortal.ViewModel
@using PagedList.Mvc;
@using PagedList;
@model BaseVM

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@RenderSection("TitleSection")</title>
      @RenderSection("HeaderSection", false) 
</head>
<body>
    <div style="text-align: center; text-decoration-color:brown; font-weight:bold;font-size:30px">
        @Model.Desc
    </div>
    <div style="text-align: right; text-decoration-color:brown;font-size:15px">
        Hello, @Model.UserName
        <a href="/Authentication/Logout">Logout</a>        
    </div>
    <hr />
    <div>
        @RenderSection("ContentBody")
    </div>
    @Html.Partial("Footer", Model.FooterData)
</body>
</html>
